@model IEnumerable<DotNetCoreSqlDb.Models.Joke>

@{
    ViewData["Title"] = "Jokes";
}

<h1>Jokes</h1>

<p>
    <a asp-action="Create">Fetch New Joke</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Setup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Punchline)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Setup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Punchline)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
